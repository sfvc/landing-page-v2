---
const indicadores = [
  { valor: 15000, texto: "Llamadas recibidas en 2024", delay: 0.1, cita: "turn0search0" },
  { valor: 3230, texto: "Personas asistidas en 2024", delay: 0.2, cita: "turn0search5" },
  { valor: 493,  texto: "Casos de alto riesgo atendidos", delay: 0.3, cita: "turn0search5" },
  { valor: 5,    texto: "Puntos Violetas activos", delay: 0.4, cita: "turn1search0" },
];
---

<div class="container mx-auto px-4 pb-8">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
    {indicadores.map(({ valor, texto, delay, cita }) => (
      <div
        class="bg-white/20 backdrop-blur-sm p-4 rounded-lg animate__animated animate__fadeInUp"
        style={`animation-delay: ${delay}s`}
      >
        <div class="text-3xl font-bold mb-2 counter" data-target={valor}>0</div>
        <div class="text-sm">{texto}</div>
      </div>
    ))}
  </div>
</div>
