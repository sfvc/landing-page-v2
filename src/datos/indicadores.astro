---
const indicadores = [
  { valor: 710, texto: "Jóvenes participantes en UDN 2024", delay: 0.1 },
  { valor:   5, texto: "Talleres temáticos ofrecidos", delay: 0.2 },
  { valor: 120, texto: "Orientaciones vocacionales brindadas", delay: 0.3 },
  { valor:   1, texto: "Punto Joven activo", delay: 0.4 },
];
---

<div class="container mx-auto px-4 pb-8">
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
    {indicadores.map(({ valor, texto, delay}) => (
      <div
        class="bg-white/20 backdrop-blur-sm p-4 rounded-lg animate__animated animate__fadeInUp"
        style={`animation-delay: ${delay}s`}
      >
        <div class="text-3xl font-bold mb-2 counter" data-target={valor}>0</div>
        <div class="text-sm">{texto}</div>
      </div>
    ))}
  </div>
</div>
