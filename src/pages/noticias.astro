---
import "../styles/global.css";
import { catamarcaApi } from "../api/catamarcaApi";
import NoticiasCard from "../components/noticiasCard.astro";
import Navbar from "../components/navbar.astro";

const datos = await catamarcaApi.get("items/Punto_Joven");
const datosCompletos = datos.data.data[0];

const noticias = await catamarcaApi.get("items/Punto_Joven_Noticias");
const noticiasCompletas = noticias.data.data;

const categoriasRes = await catamarcaApi.get("items/Punto_Joven_Categoria");
const categorias = categoriasRes.data.data;

const categoriasMap = categorias.reduce(
  (acc: any, cat: any) => {
    acc[cat.id] = cat.nombre;
    return acc;
  },
  {} as Record<number, string>,
);

const noticiasConCategorias = noticiasCompletas.map((item: any) => {
  const catIds = Array.isArray(item.categoria)
    ? item.categoria
    : [item.categoria];

  return {
    ...item,
    categoriasNombres: catIds.map(
      (id: number) => categoriasMap[id] ?? "Sin categoría",
    ),
  };
});

const categoriasUnicas = Array.from(
  new Set(noticiasConCategorias.flatMap((n: any) => n.categoriasNombres)),
);
const filtrosCategorias = ["Todas", ...categoriasUnicas];
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Noticias - {datosCompletos.nombre}</title>
    <link rel="icon" type="image/png" href="/favicon_CATACAPI.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <script src="../scripts/main.js"></script>
  </head>

  <body class="bg-gray-50 text-gray-800 font-sans">
    <Navbar />

    <section class="bg-gradient-to-r colorPrincipalFondo text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1
          class="text-4xl md:text-5xl font-bold mb-4 animate__animated animate__fadeInDown"
        >
          Noticias y Eventos
        </h1>
        <p
          class="text-xl max-w-3xl mx-auto animate__animated animate__fadeIn"
          style="animation-delay: 0.2s"
        >
          Mantente al día con las últimas novedades, eventos y actividades del {
            datosCompletos.nombre
          }
        </p>
      </div>
    </section>

    <section class="py-8 bg-white border-b">
      <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center gap-4">
          {
            filtrosCategorias.map((category: unknown, index: number) => (
              <button
                class={`cursor-pointer px-4 py-2 rounded-full transition-all duration-300 hover:scale-105 ${index === 0 ? "bg-gray-100 text-black colorPrincipalFondoHover hover:text-white" : "bg-gray-100 text-black colorPrincipalFondoHover hover:text-white"}`}
                data-category={category}
              >
                {category}
              </button>
            ))
          }
        </div>
      </div>
    </section>

    <section class="py-8 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-2xl mx-auto">
          <div class="relative">
            <input
              type="text"
              id="searchInput"
              placeholder="Buscar noticias..."
              class="w-full px-4 py-3 pl-12 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300"
            />
            <div
              class="absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"
            >
              <i class="fas fa-search"></i>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="py-12">
      <div class="container mx-auto px-4">
        <div
          id="newsGrid"
          class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8"
        >
          {
            noticiasConCategorias.map((item: any, idx: number) => (
              <div
                class="noticia-item animate__animated animate__fadeIn"
                data-index={idx}
                data-categoria={item.categoriasNombres.join(",")}
                style="display: none;"
              >
                <NoticiasCard noticias={item} />
              </div>
            ))
          }
        </div>

        <div id="pagination" class="mt-8 flex justify-center gap-2"></div>

        <div id="emptyState" class="hidden text-center py-16">
          <div class="text-6xl text-gray-300 mb-4">
            <i class="fas fa-newspaper"></i>
          </div>
          <h3 class="text-2xl font-bold text-gray-700 mb-2">
            No se encontraron noticias
          </h3>
          <p class="text-gray-500">Intenta con otra búsqueda o categoría</p>
        </div>
      </div>
    </section>

    <footer class="colorPrincipalFondo text-white py-12">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Acerca de nosotros</h3>
            <p class="mb-4">{datosCompletos.descripcion}</p>
            <div class="flex space-x-4">
              <a
                target="_blank"
                href={datosCompletos.redesSociales.facebook}
                class="text-white hover:text-blue-200 transition-transform duration-300 hover:scale-125"
              >
                <i class="fab fa-facebook-f"></i>
              </a>
              <a
                target="_blank"
                href={datosCompletos.redesSociales.instagram}
                class="text-white hover:text-blue-200 transition-transform duration-300 hover:scale-125"
              >
                <i class="fab fa-instagram"></i>
              </a>
            </div>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Enlaces rápidos</h3>
            <ul class="space-y-2">
              <li>
                <a
                  href="/"
                  class="hover:text-blue-200 transition-all duration-300 hover:translate-x-2 inline-block"
                  >Inicio</a
                >
              </li>
              <li>
                <a
                  href="/#sobre-nosotros"
                  class="hover:text-blue-200 transition-all duration-300 hover:translate-x-2 inline-block"
                  >Sobre Nosotros</a
                >
              </li>
              <li>
                <a
                  href="/#noticias"
                  class="hover:text-blue-200 transition-all duration-300 hover:translate-x-2 inline-block"
                  >Noticias</a
                >
              </li>
              <li>
                <a
                  href="/#instalaciones"
                  class="hover:text-blue-200 transition-all duration-300 hover:translate-x-2 inline-block"
                  >Instalaciones</a
                >
              </li>
              <li>
                <a
                  href="/#contacto"
                  class="hover:text-blue-200 transition-all duration-300 hover:translate-x-2 inline-block"
                  >Contacto</a
                >
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Contacto</h3>
            <ul class="space-y-2">
              <li class="flex items-start">
                <i class="fas fa-map-marker-alt mr-3 mt-1"></i>
                <span>{datosCompletos.direccion}</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-phone mr-3 mt-1"></i>
                <span>{datosCompletos.telefono}</span>
              </li>
              <li class="flex items-start">
                <i class="fas fa-envelope mr-3 mt-1"></i>
                <span>{datosCompletos.email}</span>
              </li>
            </ul>
          </div>
        </div>
        <div class="border-t colorPrincipalBorde mt-8 pt-8 text-center">
          <p>
            &copy; {new Date().getFullYear()}
            {datosCompletos.nombre}. Todos los derechos reservados.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
