---
import "../styles/global.css";
import { datosFicticios } from "../datos/datosFicticios.astro";
import SobreNosotros from "../components/sobreNosotros.astro";
import Navbar from "../components/navbar.astro";
import BannerPrincipal from "../components/bannerPrincipal.astro";
import NoticiasPrincipales from "../components/noticiasPrincipales.astro";
import Instalaciones from "../components/instalaciones.astro";
import Contacto from "../components/contacto.astro";
import Mapa from "../components/mapa.astro";
import Footer from "../components/footer.astro";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{datosFicticios.nombre} - Catamarca</title>
    <link rel="icon" type="image/png" href="/favicon_CATACAPI.png" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <script src="../scripts/main.js"></script>
  </head>

  <body class="bg-gray-50 text-gray-800 font-sans">
    <!-- Header -->
    <Navbar />

    <!-- Banner de arriba -->
    <BannerPrincipal />

    <!-- Informacion sobre el organismo -->
    <SobreNosotros />

    <!-- Encabezado de noticias -->
    <NoticiasPrincipales />

    <!-- Informacion sobre las instalaciones -->
    <Instalaciones />

    <!-- Formulario de contacto -->
    <Contacto />

    <!-- Mapa que lleva al establecimiento -->
    <Mapa />

    <!-- Footer con la informacion relevante -->
    <Footer />
  </body>
</html>
